<div class="container">

  <hgroup>
    <h1 class="billing-header">@{{org.info.name}}</h1>
  </hgroup>

  {{> org-nav payment-info=true}}

<div class="status-row">

  <div class="big-data">
    <span class="num">{{org.users.count}}</span>
    <span class="tiny">total members</span>
  </div>

  <div class="big-data">
    <span class="num">{{org.users.numSponsored}}</span>
    <span class="tiny">paid-for members</span>
  </div>

  <div class="big-data">
    <span class="dolla">$</span>
    <span class="num">14</span>
    <span class="period">/mo.</span>
    <span class="tiny">approximate cost<span class="wtf" original-title="pro-rated based upon the number of paid-for users in the billing month" rel="tipsy">?</span></span>
  </div>

  <div class="disclaimer">
    {{#if customer}}
      <ul>
        <li>Next billing date: <strong>12-Jan-16</strong></li>
        <li>Valid payment method ending in <a href="#">{{customer.card.last4}}</a></li>
        <li><a href="#" class="btn-secondary link-btn">Suspend this Org</a> &nbsp;&nbsp;<a href="#" class="btn-secondary link-btn">Delete this Org</a></li>
      </ul>
    {{else}}
      <ul>
        <li>Next billing date: <strong>n/a</strong></li>
        <li><a href="#">No valid payment on file</a></li>
        <li><a href="#" class="btn-secondary link-btn">Reactivate this Org</a> &nbsp;&nbsp;<a href="#" class="btn-secondary link-btn">Delete this Org</a></li>
      </ul>
    {{/if}}
  </div>

</div>

<ul class="expando-row">
  <li>
    <h3>Full Access</h3>
    <table class="org-table org-users org-edit-user-table">
      <thead>
        <tr>
          <th>member</th>
          <th>role</th>
          {{!-- <th>date added</th> --}}
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        {{#each org.users.items}}
          <tr>
            <td>
              <span class="avatar-small">
                <img src="{{avatar.small}}">
              </span>
              <ul class="name-desc vanilla-list ellipsis">
                <li><a class="name" href="/~{{name}}">{{name}}</a></li>
                {{#if resource.fullname}}
                <li><span class="display-name">{{resource.fullname}}</span></li>
                {{/if}}
              </ul>
              {{#if sponsoredByOrg}}
                <span class="paid-for" original-title="you are paying for this user" rel="tipsy">$</span>
              {{/if}}
            </td>
            <td>{{role}}</td>
            {{!-- <td>12-Dec-15</td> --}}
            <td>
              <div class="action-nav" role='navigation'>
                <ul>
                  <li><a href="#"><img alt="actions" class="iconic iconic-md" data-src="/static/images/iconic/actions.svg"/></a>
                    <ul>
                      <li><a href="">stop paying for this member</a></li>
                      <li><a href="">delete this member</a></li>
                    </ul>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </li>
</ul>

</div> <!-- end container -->
